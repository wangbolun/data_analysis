  float range_m;
  float angle_rads;

  float width_m;
  float length_m;
  float height_m;
  float orientation_rads;

  boolean total_left_bounding_angle_valid;
  boolean total_right_bounding_angle_valid;
  float total_left_bounding_angle_rads;
  float total_right_bounding_angle_rads;

  boolean face_left_bounding_angle_valid;
  boolean face_right_bounding_angle_valid;
  float face_left_bounding_angle_rads;
  float face_right_bounding_angle_rads;

  float age_secs;
  float time_to_collision_secs;
  boolean cipv;
  boolean oncoming_traffic;
  boolean cross_traffic;

  int32_t num_extra_values;
  float extra_values[num_extra_values];
  int32_t num_extra_infos;
  string extra_infos[num_extra_infos];

  const int8_t CAM_FRONT_CENTER = 0,
    CAM_FRONT_CENTER_CROP = 1,
    CAM_FRONT_CENTER_SVM = 4,
    CAM_REAR_CENTER_SVM = 15,
    CAM_SIDE_LEFT = 17,
